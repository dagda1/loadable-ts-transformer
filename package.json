{
  "name": "loadable-ts-transformer",
  "version": "1.0.0-alpha.3",
  "description": "TypeScript custom transformer for lodable-components SSR",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "tsc",
    "build": "tsc",
    "format": "prettier --write \"src/**/*\"",
    "format:check": "prettier --check \"src/**/*\"",
    "test": "jest"
  },
  "keywords": [
    "loadble-components",
    "React",
    "TypeScript",
    "Plugin",
    "Server Side Rendering"
  ],
  "author": "Yosuke Kurami",
  "license": "MIT",
  "peerDependencies": {
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)",
      "**/*.test.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/.*"
    ],
    "testURL": "http://localhost"
  }
}
